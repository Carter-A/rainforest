<div class = "review">
  <p><%= review.comment %></p>
  <p>Added on: <%= review.created_at %></p>
  <% if review.user != nil %>
    <em> by <%= review.user.name %></em>
  <% end %>
  <% if review.user == current_user %>
    <%= link_to "Delete", "/products/#{review.product_id}/reviews/#{review.id}", method: :delete, remote: true, class: "delete_#{review.id}" %>
  <% end %>
</div>
